<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <!--   <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>-->
        <item name="android:windowBackground">@color/bg_main</item>
        <item name="android:windowNoTitle">true</item>
    </style>


    <!-- Dialog样式 android:Theme.Dialog这个不添加Dialog会有阴影-->
    <style name="dialog" parent="android:Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <!-- Dialog的windowFrame框为无 -->
        <item name="android:windowBackground">@color/transparent</item>
        <!-- 切记一定要设置为透明状态，不然有阴影 -->
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <!-- 是否浮现在activity之上 -->
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:backgroundDimEnabled">true</item>
        <!-- 背景是否模糊显示 -->
        <item name="android:backgroundDimAmount">0.4</item>
    </style>

    <!-- Title样式 -->
    <style name="tt">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">68dp</item>
        <item name="android:background">@color/blue_deep</item>
    </style>

    <style name="tt_tv">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="tt_iv">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginLeft">12dp</item>
        <item name="android:layout_alignParentLeft">true</item>
    </style>

    <style name="tt_iv_right">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginRight">12dp</item>
        <item name="android:layout_alignParentRight">true</item>
    </style>

    <!--高度为1dp的灰色线-->
    <style name="iv">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/gray_shallow</item>
    </style>

    <style name="iv_vertical">
        <item name="android:layout_margin">11dp</item>
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/gray_shallow</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- popwindow的样式 -->
    <style name="PopupAnimation" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/popup_enter</item>
        <item name="android:windowExitAnimation">@anim/popup_exit</item>
    </style>


    <!--自定义微信按钮效果-->
    <style name="def_switch_view">
        <item name="switch_bg_color">#999999</item>
        <item name="switch_ball_color">#ffffff</item>
    </style>


    <!--TabLayout的字体大小-->
    <style name="TabTextSize" parent="TextAppearance.AppCompat.Widget.ActionBar.Title.Inverse">
        <item name="android:textSize">20sp</item>
    </style>


    <!--  +++++++++++++++++++++++++++++++++  opdetail相关的样式   +++++++++++++++++++++++++++++++++++++++++++-->
    <style name="opdetail_llf">
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">66dp</item>
    </style>

    <style name="opdetail_ll">
        <item name="android:orientation">vertical</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">@dimen/opdetail_left</item>
        <item name="android:paddingTop">@dimen/opdetail_left</item>
    </style>

    <style name="opdetail_lll">
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">@dimen/opdetail_left</item>
    </style>

    <style name="opdetail_tv">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/opdetail_tv</item>
    </style>

    <style name="opdetail_tv1">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/opdetail_tv</item>
        <item name="android:layout_marginLeft">@dimen/opdetail_left</item>
        <item name="android:layout_marginTop">@dimen/opdetail_left</item>
    </style>

    <style name="opdetail_tvb">
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/opdetail_tv</item>
    </style>

    <style name="opdetail_tvb1">
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/opdetail_tv</item>
        <item name="android:layout_marginLeft">@dimen/opdetail_left</item>
    </style>


    <!--  +++++++++++++++++++++++++++++++++  opnew相关的样式   +++++++++++++++++++++++++++++++++++++++++++-->
    <style name="opnew_ll">
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/white</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingLeft">@dimen/opdetail_left</item>
        <item name="android:layout_marginTop">6dp</item>
    </style>

    <style name="opnew_tv">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">3</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/opnew_tv</item>
    </style>

    <style name="opnew_et">
        <item name="android:background">@null</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">8</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/opnew_tv</item>
        <item name="android:hint">请输入</item>
    </style>


    <!--  +++++++++++++++++++++++++++++++++  opnext相关的样式   +++++++++++++++++++++++++++++++++++++++++++-->
    <style name="opnext_llf">
        <item name="android:layout_height">@dimen/opnext_ll</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/white</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="opnext_tv">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_margin">@dimen/opnext_margin</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/opnext_tv</item>
    </style>

    <style name="opnext_tv1">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">2</item>
        <item name="android:layout_marginLeft">22dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/opnext_tv</item>
    </style>
    <style name="opnext_et1">
        <item name="android:hint">请输入</item>
        <item name="android:background">@null</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">3</item>
    </style>
    <style name="opnext_l">
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_weight">1</item>
    </style>


    <style name="opnext_ll">
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_marginLeft">@dimen/opnext_margin1</item>
        <item name="android:layout_marginRight">@dimen/opnext_margin1</item>
        <item name="android:background">@drawable/input_bg</item>
        <item name="android:padding">8dp</item>
    </style>


    <style name="opnext_et">
        <item name="android:hint">请输入</item>
        <item name="android:background">@null</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>
    <style name="opnext_iv">
        <item name="android:background">@mipmap/pin</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_margin">11dp</item>
    </style>


    <style name="RatingBaropreview" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/ratingbar_opreview</item>
        <item name="android:minHeight">44dp</item>
        <item name="android:maxHeight">66dp</item>
    </style>


    <!--  +++++++++++++++++++++++++++++++++  maldetail相关的样式   +++++++++++++++++++++++++++++++++++++++++++-->
    <style name="maldetail_tv">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="maldetail_l">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:orientation">horizontal</item>
    </style>




</resources>
