<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3">

        <ImageView
            android:layout_width="99dp"
            android:layout_height="99dp"
            android:layout_centerInParent="true"
            android:background="@mipmap/bs_login" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6"
        android:orientation="vertical"
        android:paddingLeft="33dp"
        android:paddingRight="33dp">

        <EditText
            android:id="@+id/reset_phone"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="@drawable/input_bg"
            android:hint="请输入手机号码"
            android:inputType="number"
            android:maxLength="11"
            android:maxLines="1"
            android:paddingLeft="16dp"
            android:textColor="@color/blueSky"
            android:textSize="16sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginTop="20dp">

            <EditText
                android:id="@+id/reset_code"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:background="@drawable/input_bg"
                android:hint="请输入验证码"
                android:inputType="number"
                android:maxLength="6"
                android:maxLines="1"
                android:paddingLeft="16dp"
                android:textColor="@color/blueSky"
                android:textSize="16sp" />

            <Button
                android:id="@+id/reset_codebtn"
                android:layout_width="88dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:background="@drawable/login_btn_bg"
                android:text="获取验证码"
                android:textColor="@drawable/login_btn_text"
                android:textSize="14sp" />

        </RelativeLayout>


        <EditText
            android:id="@+id/reset_psw"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/input_bg"
            android:hint="请输入密码"
            android:inputType="textPassword"
            android:maxLength="6"
            android:maxLines="1"
            android:paddingLeft="16dp"
            android:textColor="@color/blueSky"
            android:textSize="16sp" />


        <Button
            android:id="@+id/reset_reset"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="21dp"
            android:background="@drawable/login_btn_bg"
            android:text="重置密码"
            android:textColor="@drawable/login_btn_text"
            android:textSize="20sp" />


        <TextView
            android:id="@+id/reset_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="登录"
            android:textColor="@drawable/login_text_color"
            android:textSize="16sp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2" />

</LinearLayout>