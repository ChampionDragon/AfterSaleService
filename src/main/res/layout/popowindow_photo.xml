<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/photo_ing"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/popwindow_top"
            android:gravity="center"
            android:padding="15dp"
            android:text="拍照"
            android:textColor="@drawable/textcolor"
            android:textSize="16sp" />

        <ImageView style="@style/iv" />

        <TextView
            android:id="@+id/photo_look"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/popwindow_bottom"
            android:gravity="center"
            android:padding="15dp"
            android:text="相册"
            android:textColor="@drawable/textcolor"
            android:textSize="16sp" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp" >

        <Button
            android:id="@+id/btn_cancle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/popwindow_button"
            android:gravity="center"
            android:text="取消"
            android:textColor="@drawable/textcolor"
            android:textSize="16sp" />
    </RelativeLayout>

</LinearLayout>