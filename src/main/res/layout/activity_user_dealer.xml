<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        style="@style/tt"
        android:layout_width="match_parent">

        <TextView
            style="@style/tt_tv"
            android:layout_centerInParent="true"
            android:text="用户中心" />

        <ImageView
            android:id="@+id/back_userdealer"
            style="@style/tt_iv"
            android:layout_alignParentLeft="true"
            android:background="@drawable/title_im" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="16dp"
        android:layout_weight="1"
        android:background="@drawable/input_bg">

        <com.bs.afterservice.view.RoundImageView
            android:layout_marginTop="11dp"
            android:layout_marginLeft="11dp"
            android:id="@+id/userdealer_riv"
            android:layout_width="66dp"
            android:layout_height="66dp"
            android:src="@mipmap/ic_launcher" />
        <TextView
            android:id="@+id/userdealer_name"
            android:layout_toRightOf="@id/userdealer_riv"
            android:layout_marginTop="11dp"
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:textColor="@color/black"
            android:text="刘子尧"
            android:textStyle="bold"
            android:layout_height="wrap_content" />
        <ImageView
            android:layout_alignBottom="@id/userdealer_name"
            android:layout_marginLeft="11dp"
            android:background="@mipmap/qrcode"
            android:layout_toRightOf="@id/userdealer_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/userdealer_company"
            android:layout_alignLeft="@id/userdealer_name"
            android:layout_marginBottom="16dp"
            android:layout_alignParentBottom="true"
            android:text="江西百胜智能科技股份有限公司"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginBottom="5dp"
            android:layout_above="@id/userdealer_company"
            android:text="经销商"
            android:layout_width="wrap_content"
            android:layout_alignLeft="@id/userdealer_name"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:background="@color/white"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/userdealer_device"
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:layout_centerInParent="true"
                    android:src="@mipmap/device" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/userdealer_device"
                    android:layout_centerHorizontal="true"
                    android:text="设备管理"
                    android:textColor="@color/black"
                    android:textSize="15sp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/userdealer_custser"
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:layout_centerInParent="true"
                    android:src="@mipmap/video" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/userdealer_custser"
                    android:layout_centerHorizontal="true"
                    android:text="售后人员管理"
                    android:textColor="@color/black"
                    android:textSize="15sp" />
            </RelativeLayout>

        </LinearLayout>



        <RelativeLayout
            android:id="@+id/userdealer_set"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="11dp"
            android:layout_weight="1"
            android:background="@color/white">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="22dp"
                android:text="账户设置"
                android:textColor="@color/black"
                android:textSize="18sp" />
        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2" />

</LinearLayout>