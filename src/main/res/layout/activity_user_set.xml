<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        style="@style/tt"
        android:layout_width="match_parent">

        <TextView
            style="@style/tt_tv"
            android:layout_centerInParent="true"
            android:text="账户设置" />

        <ImageView
            android:id="@+id/back_userset"
            style="@style/tt_iv"
            android:layout_alignParentLeft="true"
            android:background="@drawable/title_im" />
    </RelativeLayout>


    <TextView
        android:id="@+id/userset_safe"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/userset_paddingLeft"
        android:text="账户与安全"
        android:textColor="@color/black"
        android:textSize="@dimen/userset_tv" />

    <ImageView style="@style/iv" />

    <TextView
        android:id="@+id/userset_push"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/userset_paddingLeft"
        android:text="消息推送"
        android:textColor="@color/black"
        android:textSize="@dimen/userset_tv" />

    <ImageView style="@style/iv" />


    <LinearLayout
        android:id="@+id/userset_clean"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/userset_paddingLeft"
            android:text="清理缓存"
            android:textColor="@color/black"
            android:textSize="@dimen/userset_tv" />

        <TextView
            android:id="@+id/userset_rubbish"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/userset_paddingLeft"
            android:gravity="right"
            android:text="15.0MB" />

    </LinearLayout>


    <TextView
        android:id="@+id/userset_dealer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/userset_marginTop"
        android:layout_weight="1"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/userset_paddingLeft"
        android:text="经销商认证"
        android:textColor="@color/black"
        android:textSize="@dimen/userset_tv" />

    <TextView
        android:id="@+id/userset_opinion"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/userset_marginTop"
        android:layout_weight="1"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/userset_paddingLeft"
        android:text="意见反馈"
        android:textColor="@color/black"
        android:textSize="@dimen/userset_tv" />


    <ImageView style="@style/iv" />

    <TextView
        android:id="@+id/userset_about"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/userset_paddingLeft"
        android:text="关于"
        android:textColor="@color/black"
        android:textSize="@dimen/userset_tv" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <TextView
        android:id="@+id/userset_out"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/white"
        android:gravity="center"
        android:text="退出登录"
        android:textColor="@drawable/userset_out_color"
        android:textSize="@dimen/userset_tv"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2.5" />

</LinearLayout>