<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:paddingLeft="20dp"
              android:paddingRight="20dp">

    <Button
        android:id="@+id/btn_ymdhm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="yyyy-MM-dd HH:mm"
        />

    <Button
        android:id="@+id/btn_ymdh"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="yyyy-MM-dd HH"/>

    <Button
        android:id="@+id/btn_ymd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="yyyy-MM-dd"/>

    <Button
        android:id="@+id/btn_mdhm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="MM-dd HH:mm"/>

    <Button
        android:id="@+id/btn_hm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="HH:mm"/>

    <Button
        android:id="@+id/btn_ym"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="yyyy-MM"/>

    <TextView
        android:id="@+id/timepicker_tv"
        android:textColor="@color/blueSky"
        android:gravity="center_horizontal"
        android:textSize="22sp"
        android:text="设置系统时间"
        android:layout_marginTop="33dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


</LinearLayout>
